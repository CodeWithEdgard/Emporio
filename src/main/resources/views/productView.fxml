<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.loja.controllers.ProductController" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Categoria:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="categoryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Fornecedor:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="supplierField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Data de Vencimento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="expirationDateField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Data de Compra:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="purchaseDateField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Quantidade:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="quantityField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Adicionar Produto" GridPane.rowIndex="6" GridPane.columnIndex="1" onAction="#handleAddProduct"/>
</GridPane>
